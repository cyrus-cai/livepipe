{
  "enabled": true,
  "id": "livepipe",
  "source": "https://github.com/cyrus-cai/livepipe",
  "crons": [
    {
      "path": "/api/start",
      "schedule": "*/1 * * * *"
    }
  ],
  "filter": {
    "allowedApps": [
      "Notes",
      "Reminders",
      "WeChat",
      "Messages",
      "Telegram",
      "Calendar",
      "Mail",
      "Slack",
      "Notion",
      "Obsidian",
      "Things",
      "Todoist",
      "TickTick",
      "Google Chrome",
      "Safari",
      "Arc",
      "Firefox",
      "Microsoft Edge",
      "Feishu",
      "DingTalk",
      "Wallpaper"
    ],
    "blockedWindows": [
      "livepipe",
      "opencode",
      "screenpipe"
    ],
    "minTextLength": 20
  },
  "outputLanguage": "zh-CN",
  "capture": {
    "mode": "always",
    "hotkeyHoldMs": 500
  },
  "review": {
    "enabled": false,
    "provider": "gemini",
    "model": "gemini-3-flash-preview",
    "apiKey": "your-google-ai-studio-key",
    "failOpen": true
  },
  "notification": {
    "desktop": true,
    "webhooks": [
      {
        "enabled": true,
        "provider": "feishu",
        "url": "https://open.feishu.cn/open-apis/bot/v2/hook/YOUR_FEISHU_WEBHOOK_TOKEN"
      },
      {
        "enabled": false,
        "provider": "telegram",
        "url": "https://api.telegram.org/bot<token>/sendMessage",
        "chatId": "<chat-id>"
      }
    ]
  }
}
